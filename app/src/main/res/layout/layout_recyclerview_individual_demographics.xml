<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:padding="10dp">
	
	<androidx.constraintlayout.widget.Guideline
		android:id="@+id/demographicImageWidthGuideline"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		app:layout_constraintGuide_percent="0.1" />
	
	<ImageView
		android:id="@+id/demographicImageView"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:scaleType="centerInside"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="@id/demographicImageWidthGuideline"
		app:layout_constraintTop_toTopOf="parent" />
	
	<TextView
		android:id="@+id/demographicTextView"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginStart="8dp"
		android:textAlignment="textStart"
		android:textColor="@color/colorForeground"
		android:textSize="14sp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintLeft_toLeftOf="@id/demographicImageWidthGuideline"
		app:layout_constraintStart_toEndOf="@+id/demographicImageView"
		app:layout_constraintTop_toTopOf="parent" />
	
</androidx.constraintlayout.widget.ConstraintLayout>