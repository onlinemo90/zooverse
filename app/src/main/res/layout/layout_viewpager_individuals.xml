<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<ImageView
		android:id="@+id/individualImage"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:contentDescription="@string/individual_image"
		android:scaleType="centerCrop"
		app:layout_constraintBottom_toTopOf="@+id/individualGuidelineTop"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<androidx.constraintlayout.widget.Guideline
		android:id="@+id/individualGuidelineTop"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		app:layout_constraintGuide_percent="0.3" />

	<TextView
		android:id="@+id/dobTextViewLabel"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="16dp"
		android:layout_marginTop="64dp"
		android:text="@string/individual_dob"
		android:textSize="24sp"
		android:textStyle="bold"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/individualGuidelineTop" />

	<TextView
		android:id="@+id/placeOfBirthTextViewLabel"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="16dp"
		android:layout_marginTop="24dp"
		android:text="@string/individual_place_of_birth"
		android:textSize="24sp"
		android:textStyle="bold"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/dobTextViewLabel" />

	<TextView
		android:id="@+id/genderTextViewLabel"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="16dp"
		android:layout_marginTop="24dp"
		android:text="@string/individual_gender"
		android:textSize="24sp"
		android:textStyle="bold"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/placeOfBirthTextViewLabel" />

	<TextView
		android:id="@+id/weightTextViewLabel"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="16dp"
		android:layout_marginTop="24dp"
		android:text="@string/individual_weight"
		android:textSize="24sp"
		android:textStyle="bold"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/genderTextViewLabel" />

	<TextView
		android:id="@+id/sizeTextViewLabel"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="16dp"
		android:layout_marginTop="24dp"
		android:text="@string/individual_size"
		android:textSize="24sp"
		android:textStyle="bold"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/weightTextViewLabel" />

	<androidx.constraintlayout.widget.Guideline
		android:id="@+id/individualGuidelineVertical"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		app:layout_constraintGuide_percent="0.5" />

	<TextView
		android:id="@+id/individualDobTextView"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:textSize="24sp"
		app:layout_constraintStart_toStartOf="@+id/individualGuidelineVertical"
		app:layout_constraintTop_toTopOf="@+id/dobTextViewLabel" />

	<TextView
		android:id="@+id/individualPlaceOfBirthTextView"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:textSize="24sp"
		app:layout_constraintStart_toStartOf="@+id/individualGuidelineVertical"
		app:layout_constraintTop_toTopOf="@+id/placeOfBirthTextViewLabel" />

	<TextView
		android:id="@+id/individualGenderTextView"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:textSize="24sp"
		app:layout_constraintStart_toStartOf="@+id/individualGuidelineVertical"
		app:layout_constraintTop_toTopOf="@+id/genderTextViewLabel" />

	<TextView
		android:id="@+id/individualWeightTextView"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:textSize="24sp"
		app:layout_constraintStart_toStartOf="@+id/individualGuidelineVertical"
		app:layout_constraintTop_toTopOf="@+id/weightTextViewLabel" />

	<TextView
		android:id="@+id/individualSizeTextView"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:textSize="24sp"
		app:layout_constraintStart_toStartOf="@+id/individualGuidelineVertical"
		app:layout_constraintTop_toTopOf="@+id/sizeTextViewLabel" />


</androidx.constraintlayout.widget.ConstraintLayout>