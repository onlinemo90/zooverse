<resources>
	
	<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorPrimary</item>
		
		<item name="android:colorForeground">@color/colorForeground</item>
		<item name="android:colorBackground">@color/colorBackground</item>
		
		<item name="android:textColor">@color/colorForeground</item>
		<item name="android:textColorHint">@color/colorForeground</item>
		<item name="android:colorButtonNormal">@color/colorPrimary</item>
		
		<item name="actionBarTheme">@style/AppTheme.AppBar</item>
		<item name="android:buttonStyle">@style/AppTheme.Button</item>
	</style>
	
	<style name="AppTheme.AppBar" parent="@style/Widget.AppCompat.ActionBar">
		<item name="android:colorForeground">@color/colorBackground</item>
	</style>
	
	<style name="AppTheme.Button" parent="@style/Widget.AppCompat.Button">
		<item name="android:textColor">@color/colorBackground</item>
		<item name="background">@color/colorPrimary</item>
	</style>

</resources>