<resources>
	<!-- Base Theme -->
	<style name="AppTheme" parent="Theme.AppCompat">
		<item name="colorPrimary">?attr/themeColorPrimary</item>
		<item name="colorPrimaryDark">?attr/themeColorPrimaryDark</item>
		<item name="colorAccent">?attr/themeColorPrimary</item>
		
		<item name="android:colorForeground">?attr/themeColorForeground</item>
		<item name="android:colorBackground">?attr/themeColorBackground</item>
		
		<item name="android:textColor">?attr/themeColorForeground</item>
		<item name="android:textColorHint">?attr/themeColorForeground</item>
		<item name="android:colorButtonNormal">?attr/themeColorPrimary</item>
		
		<item name="android:statusBarColor">?attr/themeColorPrimaryDark</item>
		<item name="actionBarTheme">@style/AppTheme.AppBar</item>
		<item name="android:buttonStyle">@style/AppTheme.Button</item>
	</style>
	
	<style name="AppTheme.AppBar" parent="@style/Widget.AppCompat.ActionBar">
		<item name="android:colorForeground">?attr/themeColorBackground</item>
	</style>
	
	<style name="AppTheme.Button" parent="@style/Widget.AppCompat.Button">
		<item name="android:textColor">?attr/themeColorBackground</item>
		<item name="background">?attr/themeColorPrimary</item>
	</style>

	<style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
		<item name="android:windowBackground">@drawable/splash_screen</item>
		<item name="android:windowNoTitle">true</item>
		<item name="android:statusBarColor">@android:color/transparent</item>
		<item name="android:navigationBarColor">@color/colorBackground_dark</item>
	</style>
	
	<!-- Light Theme -->
	<style name="AppTheme.Light" parent="AppTheme">
		<item name="themeLogo">@drawable/logo_light</item>
		<item name="themeColorPrimary">@color/colorPrimary</item>
		<item name="themeColorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="themeColorBackground">@color/colorBackground</item>
		<item name="themeColorForeground">@color/colorForeground</item>
		<item name="themeColorExoPlayer">@color/colorBackground</item>

		<item name="android:windowLightStatusBar">false</item>
		<item name="android:navigationBarColor">@color/colorNavigationBar</item>
		<item name="themeColorCardBackground">@color/colorCardBackground</item>
	</style>
	
	<!-- Dark Theme -->
	<style name="AppTheme.Dark" parent="AppTheme">
		<item name="themeLogo">@drawable/logo_dark</item>
		<item name="themeColorPrimary">@color/colorPrimary_dark</item>
		<item name="themeColorPrimaryDark">@color/colorPrimaryDark_dark</item>
		<item name="themeColorBackground">@color/colorBackground_dark</item>
		<item name="themeColorForeground">@color/colorForeground_dark</item>
		<item name="themeColorExoPlayer">@color/colorForeground_dark</item>

		<item name="android:windowLightStatusBar">true</item>
		<item name="android:navigationBarColor">@color/colorNavigationBar_dark</item>
		<item name="themeColorCardBackground">@color/colorCardBackground_dark</item>
	</style>
</resources>