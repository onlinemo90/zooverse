<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.zooverse">

	<uses-permission android:name="android.permission.CAMERA" />
	<uses-permission android:name="android.permission.VIBRATE" />

	<application
		android:name=".MainApplication"
		android:allowBackup="true"
		android:icon="@mipmap/ic_launcher"
		android:label="@string/app_name"
		android:roundIcon="@mipmap/ic_launcher_round"
		android:supportsRtl="true"
		android:theme="@style/AppTheme.Light">

		<activity
			android:name=".activities.SplashScreenActivity"
			android:screenOrientation="portrait"
			android:theme="@style/SplashTheme">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
			<intent-filter>
				<action android:name="android.intent.action.VIEW" />
				<category android:name="android.intent.category.BROWSABLE" />
				<category android:name="android.intent.category.DEFAULT" />
				<data
					android:host="zooverse.co.uk"
					android:pathPrefix="/android"
					android:scheme="https"  />
			</intent-filter>
		</activity>
		<activity
			android:name=".activities.MainActivity"
			android:label="@string/app_name"
			android:screenOrientation="portrait" />
		<activity
			android:name=".activities.SettingsActivity"
			android:label="@string/title_activity_settings"
			android:screenOrientation="portrait" />
		<activity
			android:name=".activities.ScanTicketActivity"
			android:label="@string/scan_ticket_header"
			android:screenOrientation="portrait" />
		<activity
			android:name=".activities.ZooMenuActivity"
			android:screenOrientation="portrait" />
		<activity
			android:name=".activities.SpeciesSearchActivity"
			android:screenOrientation="portrait" />
		<activity
			android:name=".activities.ScanInfoPointActivity"
			android:label="@string/scan_infopoint_header"
			android:screenOrientation="portrait" />
		<activity
			android:name=".activities.SpeciesActivity"
			android:screenOrientation="portrait"/>
	</application>

</manifest>